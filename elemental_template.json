{
  "definitions": {
    "desc": "Maximally Distinct Elemental Phonology",
    
    "morphology": {
      "past_tense": {
        "anchor": "earth",
        "shape": "VC",
        "note": "Past is solid and grounded"
      },
      "future_tense": {
        "anchor": "air",
        "shape": "V",
        "note": "Future is open and ethereal"
      },
      "plural": {
        "anchor": "water",
        "shape": "VL",
        "note": "Plurality flows and multiplies"
      },
      "continuous": {
        "anchor": "water",
        "shape": "VLV",
        "note": "Ongoing action flows"
      },
      "intensifier": {
        "anchor": "fire",
        "shape": "C",
        "note": "Sharp emphasis"
      }
    },

    "C": ["p", "t", "k", "b", "d", "g", "m", "n", "s", "z", "l", "r", "h", "w", "y", "f", "v", "sh", "th"],
    "V": ["a", "e", "i", "o", "u", "aa", "ee", "ii", "oo", "uu"],
    
    "FireConsonants": ["k", "t", "sh", "kr", "tr", "st", "sk"],
    "FireVowels": ["a", "i", "ai"],
    
    "WaterConsonants": ["l", "m", "n", "w", "lm", "mn"],
    "WaterVowels": ["u", "o", "ou"],
    
    "EarthConsonants": ["b", "d", "g", "ng", "mb", "nd", "br", "dr", "gr"],
    "EarthVowels": ["o", "u", "uh"],
    
    "AirConsonants": ["h", "y", "s", "f", "th", "sh"],
    "AirVowels": ["i", "e", "ai", "ei"]
  },

  "constraints": {
    "desc": "Phonotactic rules for natural-sounding words",
    "no_triple_consonant": {
      "pattern": "[^aeiou]{3}"
    },
    "no_triple_vowel": {
      "pattern": "[aeiou]{3}"
    }
  },

  "orthography": {
    "desc": "Spelling rules for readability",
    "default": [
      {"from": "kh", "to": "x"},
      {"from": "sh", "to": "š"},
      {"from": "th", "to": "þ"},
      {"from": "ng", "to": "ŋ"},
      {"from": "tch", "to": "č"}
    ]
  },

  "ontology": {
    "desc": "MAXIMALLY DISTINCT 4-ELEMENT SYSTEM",
    
    "noun": {
      "weight": 1.0,
      "add_shapes": ["CV", "CVC", "CVCV", "CVCCV", "CVCVC", "CVVCV", "CCVCV", "CVCVCV", "VCV", "VCVC", "VCVCV"],
      "note": "POS: Objects"
    },
    
    "verb": {
      "weight": 1.0,
      "add_shapes": ["CV", "CVC", "CVCVC", "CVVC", "CCVC", "CVCCV", "CVCVCV", "VC", "VCC", "VCVC"],
      "note": "POS: Actions"
    },
    
    "adjective": {
      "weight": 1.0,
      "add_shapes": ["VCV", "CVCV", "CVVCV", "CCVCV", "VCVCV", "CVCVCV", "CV", "CVC", "VCVV"],
      "note": "POS: Descriptors"
    },
    
    "adverb": {
      "weight": 1.0,
      "add_shapes": ["VCV", "VCVC", "VCVCV", "CVCVCV", "VCCV", "CV", "CVC", "CVVC"],
      "note": "POS: Modifiers"
    },

    "particle": {
      "weight": 1.0,
      "add_shapes": ["CV", "V", "CVC", "VC", "CVV", "VCC"],
      "note": "POS: Function words"
    },

    "conjunction": {
      "weight": 1.0,
      "add_shapes": ["CV", "V", "CVC", "VC"],
      "note": "POS: Conjunctions (and, but, or, etc.)"
    },

    "preposition": {
      "weight": 1.0,
      "add_shapes": ["CV", "V", "CVC", "VC", "VCC"],
      "note": "POS: Prepositions (at, in, on, to, etc.)"
    },

    "pronoun": {
      "weight": 1.0,
      "add_shapes": ["CV", "CVV", "V", "VC"],
      "note": "POS: Pronouns (I, you, he, she, etc.)"
    },

    "fire": {
      "weight": 3.0,
      "note": "FIRE: Sharp, explosive, aggressive - Harsh stops and hissing fricatives with sharp vowels",
      "add_sounds": [
        "FireConsonants",
        "FireConsonants",
        "FireConsonants",
        "FireConsonants",
        "FireConsonants",
        "FireVowels",
        "FireVowels",
        "FireVowels",
        "FireVowels"
      ],
      "add_spelling": ["default"]
    },
    
    "water": {
      "weight": 3.0,
      "note": "WATER: Flowing, liquid, continuous - Liquids and nasals with round vowels",
      "add_sounds": [
        "WaterConsonants",
        "WaterConsonants", 
        "WaterConsonants",
        "WaterConsonants",
        "WaterConsonants",
        "WaterVowels",
        "WaterVowels",
        "WaterVowels",
        "WaterVowels"
      ],
      "add_spelling": ["default"]
    },
    
    "earth": {
      "weight": 3.0,
      "note": "EARTH: Heavy, grounded, resonant - Voiced stops and nasals with deep vowels",
      "add_sounds": [
        "EarthConsonants",
        "EarthConsonants",
        "EarthConsonants",
        "EarthConsonants",
        "EarthConsonants",
        "EarthVowels",
        "EarthVowels",
        "EarthVowels",
        "EarthVowels"
      ],
      "add_spelling": ["default"]
    },
    
    "air": {
      "weight": 3.0,
      "note": "AIR: Light, breathy, ethereal - Fricatives and glides with high vowels",
      "add_sounds": [
        "AirConsonants",
        "AirConsonants",
        "AirConsonants",
        "AirConsonants",
        "AirConsonants",
        "AirVowels",
        "AirVowels",
        "AirVowels",
        "AirVowels"
      ],
      "add_spelling": ["default"]
    },

    "satellite": {
      "weight": 1.0,
      "add_shapes": ["VCV", "CV"],
      "note": "POS: Satellite adjectives - punchy modifiers"
    },
  }
}
